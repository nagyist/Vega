{
  "private": true,
  "name": "@vega/app",
  "version": "4.0.3",
  "main": "main/index.js",
  "productName": "Vega",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build && next export && ./script/after_build_renderer.sh",
    "build-electron": "tsc -p ./src/electron-src",
    "build": "npm run build-renderer && npm run build-electron && electron-builder build -p never",
    "electron-builder": "electron-builder",
    "lint": "next lint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "@vega/core": "*",
    "@vega/riapp-ui": "*",
    "add": "^2.0.6",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "focus-trap": "^7.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "short-uuid": "^4.2.2",
    "styled-components": "^5.3.6",
    "tabler-icons-react": "^1.56.0",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "electron": "^24.2.0",
    "electron-builder": "^23.0.3",
    "eslint": "^8.32.0",
    "eslint-config-next": "13.1.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "rimraf": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "build": {
    "appId": "com.toshusai.vega",
    "extends": null,
    "asar": true,
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      },
      "icon": "src/public/icon.png"
    },
    "win": {
      "icon": "src/public/icon.png"
    },
    "extraResources": [
      "out"
    ]
  },
  "packageManager": "yarn@3.4.1"
}
